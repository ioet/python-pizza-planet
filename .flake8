[flake8]
exclude =
    .git
    __init__.py
    __pycache__/
    *.py[cod]
    .DS_Store
    .pytest_cache
    .idea
    .vscode
    .vs
    firebase_credentials.json
    .venv/*
    .env
    env
    **/.terraform/*
    *.tfstate
    *.tfstate.*
    crash.log
    crash.*.log
    *.tfvars
    *.tfvars.json
    override.tf
    override.tf.json
    *_override.tf
    *_override.tf.json
    .terraformrc
    terraform.rc
    .terraform.lock.hcl
    ./python-pizza-planet/conftest.py
show-source = True
statistics = True
max-line-length=100
